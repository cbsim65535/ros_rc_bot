[Unit]
Description=Run Ros RC Car Jetson launch

[Service]
User=cbsim
Group=cbsim
ExecStart=ROS_DOMAIN_ID=100 /bin/bash -c 'source /opt/ros/foxy/setup.bash; source home/cbsim/rc_ws/install/setup.bash; ros2 launch rc_bringup jetson_bringup.launch.py; sleep 60'
RemainAfterExit=no
Restart=on-failure
RestartSec=2s

[Install]
WantedBy=multi-user.target